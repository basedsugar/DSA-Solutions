class Solution {
  public:
    // Function to detect cycle in an undirected graph.
    bool check(int node,int parent,vector<int>&visited,vector<int>adj[])
    {
        visited[node]=1;
        for(auto i:adj[node])
        {
            if(visited[i]==0)
            {
                if(check(i,node,visited,adj))
                    return true;
            }
            else if(i!=parent)
                return true;
        }
        return false;
    }
    bool isCycle(int V, vector<int> adj[]) 
    {
        vector<int>visited(V,0);
        for(int i=0;i<V;i++)
        {
            if(visited[i]==0)
                if (check(i,-1,visited,adj))
                    return true;
        }
        return false;
    }
    
};
