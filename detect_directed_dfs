class Solution {
public:
    bool canFinish(int numCourses, vector<vector<int>>& prerequisites) 
    {
        vector<int>adj[numCourses];
        for(int i=0;i<prerequisites.size();i++)
            adj[prerequisites[i][1]].push_back(prerequisites[i][0]);
        vector<int>visited(numCourses,0);
        vector<int>dfsvisited(numCourses,0);
        for(int i=0;i<numCourses;i++)
        {
            if(visited[i]==0)
                if(check(i,visited,dfsvisited,adj)==false)
                    return false;
        }
        return true;
    }
    bool check(int node,vector<int>&visited,vector<int>&dfsvisited,vector<int>adj[])
    {
        visited[node]=1;
        dfsvisited[node]=1;
        for(auto i:adj[node])
        {
            if(visited[i]==0)
            {
                if(check(i,visited,dfsvisited,adj)==false)
                    return false;
            }            
            else if(dfsvisited[i]==1)
                return false;
        }
        dfsvisited[node]=0;
        return true;
    }
};
